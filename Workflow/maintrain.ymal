apiVersion: argoproj.io/v1alpha1
kind: WorkflowTemplate
metadata:
  name: hbhb
  annotations:
    scenarios.ai.sap.com/description: "Learning how to ingest data to workflows"
    scenarios.ai.sap.com/name: "HB-datalines-exec"
    executables.ai.sap.com/description: "Train with live data"
    executables.ai.sap.com/name: "training-hb"
    artifacts.ai.sap.com/data.kind: "dataset"
    artifacts.ai.sap.com/model.kind: "model"
  labels:
    scenarios.ai.sap.com/id: "HB-datalines-execid"
    ai.sap.com/version: "2.0"
spec:
  imagePullSecrets:
    - name: hack2build
  entrypoint: testpipeline
  templates:
  - name: testpipeline
    steps:
    - name: testpredictor
      template: testcodeblock2
  - name: testcodeblock2
    metadata:
      labels:
        ai.sap.com/resourcePlan: starter
    inputs: 
    
    outputs:
      artifacts:
        - name: hacktobuildmodel
          globalName: hacktobuildmodel
          path: /app/model/
          archive:
            none: {}
    container:
      image: docker.io/valaysalve/hb:01
      command: ["/bin/sh", "-c"]
      args:
        - "python /app/src/h2b.py"
